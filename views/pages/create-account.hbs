<div class="flex mt-14 h-fit w-full justify-center">
    <form action="/auth/create-account" method="post"
        class="flex self-center flex-col shadow-xl lg:w-1/3 md:w-2/3 sm:w-full h-fit bg-slate-800 py-10 px-10 gap-5">
        <div>
            <h1 class="text-white font-bold">Create an account</h1>
            <p class="text-gray-300 mt-2">Already have an account?
                <a href="/auth/sign-in">Sign in</a>
            </p>
        </div>

        <div class="flex flex-col">
            <label for="firstName" class="text-white text-lg">First name</label>
            <input type="text" name="firstName" id="s" class="p-2 rounded-sm" required />
        </div>

        <div class="flex flex-col">
            <label for="lastName" class="text-white text-lg">Last name</label>
            <input type="text" name="lastName" id="a" class="p-2 rounded-sm" required />
        </div>

        <div class="flex flex-col">
            <label for="major" class="text-white text-lg">Major</label>
            <select name="major" id="e" class="p-2 rounded-sm" required>
                <option value="Computer Engineering">Computer Engineering</option>
                <option value="Computer Science">Computer Science</option>
            </select>
        </div>
        <div class="flex flex-col">
            <label for="email" class="text-white text-lg">Email</label>
            <input type="email" name="email" id="q" class="p-2 rounded-sm" required />
        </div>
        <div class="flex flex-col">
            <label for="password" class="text-white text-lg">Password</label>
            <input type="password" name="password" id="2" class="p-2 rounded-sm" required />
        </div>
        
        {{#if message}}
        <div class="w-full p-1 mt-2 {{color}} text-center">
            <p class='text-white'>{{message}}</p>
        </div>
        {{/if}}

        <div class="mt-4 w-full">
            <button type="submit" class="p-2 bg-blue-600 rounded-md text-white w-full">Create account</button>
        </div>
    </form>
</div>