<div class="flex mt-14 h-4/6 w-full justify-center">
    <form action="/auth/reset-password/{{token}}" method="post"
        class="flex self-center flex-col shadow-xl lg:w-1/3 md:w-2/3 sm:w-full h-fit bg-slate-800 py-10 px-10 gap-5">
        <div>
            <h1 class="text-white font-bold">Reset Password</h1>
            <p class="text-gray-300 mt-2">
                Please enter a new password.
            </p>
        </div>
        <div class="flex flex-col">
            <label for="password" class="text-white text-lg">New password</label>
            <input type="password" name="password" id="2" class="p-2 rounded-sm" required />
        </div>
        <div class="flex flex-col">
            <label for="password" class="text-white text-lg">Re-enter password</label>
            <input type="password" name="dummyPassword" id="2" class="p-2 rounded-sm" required />
        </div>
        {{#if message}}
        <div class="w-full p-1 mt-2 {{color}} text-center">
            <p class='text-white font-semibold'>
                {{message}}
            </p>
        </div>
        {{/if}}
        <div class="mt-4 w-full">
            <button type="submit" class="p-2 bg-blue-600 rounded-md text-white w-full">Reset password</button>
        </div>
    </form>
</div>