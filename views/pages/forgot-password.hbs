<div class="flex h-4/6 w-full mt-14 justify-center">
    <form action="/auth/forgot-password" method="post"
        class="flex self-center flex-col shadow-xl lg:w-1/3 md:w-2/3 sm:w-full h-fit bg-slate-800 py-10 px-10 gap-5">
        <div>
            <h1 class="text-white font-bold">Forgot Password?</h1>
            <p class="text-gray-300 mt-2">
                Please enter your email to send a reset password link.
            </p>
            <p class="text-gray-300 mt-2">Don't have an account?
                <a href="/auth/create-account">Create an account</a>
            </p>
        </div>
        <div class="flex flex-col">
            <label for="email" class="text-white text-lg">Email</label>
            <input type="email" name="email" id="q" class="p-2 rounded-sm" required />
        </div>
        {{#if message}}
        <div class="w-full p-1 mt-2 {{color}} text-center">
            <p class='text-white font-semibold'>
                {{message}}   
            </p>
        </div>
        {{/if}}

        <div class="mt-4 w-full">
            <button type="submit" class="p-2 bg-blue-600 rounded-md text-white w-full">Send link</button>
        </div>
    </form>
</div>