<div class="flex mt-14 h-4/6 w-full justify-center">
    <form action="/account/settings"
        class="flex flex-col justify-center bg-slate-800 py-10 px-10 gap-4 rounded-lg lg:w-1/3 md:w-2/3 sm:w-full relative"
        method="post">
        <div id="edit-icon" class="absolute right-5 top-5 w-8 hover:cursor-pointer">
            <img src="/icons/editing.png" alt="">
        </div>
        <div class="group w-52 border-2 bg-blue-600 border-black rounded-full self-center relative">
            <img id="settings-profile-icon" src="/profile-icons/{{user.profile_icon}}" class="object-cover">
            <div id="settings-profile-icon-change"
                class="flex justify-center absolute top-0 left-0 h-full w-full rounded-full font-bold hover:bg-white/70 hover:cursor-pointer hidden">
                <p class="self-center opacity-0 group-hover:opacity-100">Change</p>
            </div>
            <input name="profile_icon" id="hidden-profile-icon-input" value="{{user.profile_icon}}" class="w-0 h-0"></input>
        </div>
        <div id="profile-icon-picker" class="absolute rounded-b-md top-1/2 left-0 bg-black/50 w-full h-1/2 overflow-y-scroll flex flex-wrap justify-evenly overflow-x-hidden hidden">
            {{#each icons}}
                <div id="{{this}}" class="icon w-24 border-2 bg-blue-600 border-black rounded-full hover:cursor-pointer hover:scale-110">
                    <img src="/profile-icons/{{this}}" class="w-full" alt="">
                </div>
            {{/each}}
        </div>
        <div id="accounts-input-fields" class="self-center space-y-3 text-center">
            <input
                class="bg-transparent lg:text-4xl text-2xl text-center text-white font-bold w-full border-b-2 disabled:border-none break-normal"
                type="text" name="name" id="" value="{{user.firstName}} {{user.lastName}}" disabled required>
            <select class="bg-transparent lg:text-3xl text-2xl text-center text-white w-full border-b-2 disabled:border-none"
                type="text" name="major" id="" value="{{user.major}}" disabled required>
                <option class="bg-transparent lg:text-3xl text-xl text-center text-black">{{user.major}}</option>
                <option class="bg-transparent lg:text-3xl text-xl text-center text-black" value="Computer Science">Computer Science
                </option>
                <option class="bg-transparent lg:text-3xl text-xl text-center text-black" value="Computer Engineering">Computer Engineering
                </option>
            </select>
            <h4 class="text-gray-500 w-full text-center">{{user.email}}</h4>
        </div>
        <div class="mt-4 w-full">
            <button type="submit" id="accounts-submit-button" class="p-2 bg-blue-600 rounded-md text-white w-full hidden">Save</button>
        </div>
    </form>
</div>